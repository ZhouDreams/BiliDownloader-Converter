<MainPage>
    size: 282,500

    Image:
        source: "GoldenGlow.png"
        allow_stretch:True
	    keep_ratio:True

	Image:
	    color: 255/255,30/255,255/255,0.1
	    size_hint: 260/282,90/500
	    pos: 10,368

    GridLayout:
        rows: 3
        padding:10
        spacing:10

        Label:
		    text: "Welcome To Use\nBili Downloader and Converter\nInfinite X"
		    bold: True
		    outline_width: 1
		    outline_color: 0,0,0,1
	    	font_size: 19
	    	halign: 'center'
	    	valign: 'center'
	    	color: 1,1,1,1

		Button:
			text: 'Open Download Menu'
			font_size: 20
			background_color: 255/255,30/255,221/255,0.5
			on_press:
			    app.root.current = 'Download'
			    root.switchToDownload()

		Button:
			text: 'Open Converter Menu'
			font_size: 20
			background_color: 0.48,0.40,0.93,0.7
			on_press:
			    app.root.current = 'Converter'
			    root.switchToConvert()

